{
  "manifest_version": 3,
  "name": "Lil Munster",
  "version": "1.0",
  "description": "A virtual pet monster with AI chatbot capabilities",
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "chrome_url_overrides": {
    "newtab": "pet.html"
  }, 
  "icons": {
    "16": "icon16.png",
    "32": "icon2.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}